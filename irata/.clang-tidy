Checks: >
  clang-analyzer-*,bugprone-*,performance-*,portability-*,readability-*,
  modernize-*,misc-*,-modernize-use-trailing-return-type,-readability-magic-numbers,-modernize-use-nodiscard,bugprone-use-after-move

WarningsAsErrors: ''
HeaderFilterRegex: 'sim/.*'
FormatStyle: file
CheckOptions:
  - key: modernize-use-nullptr.NullMacros
    value: 'NULL'
  - key: readability-identifier-naming.ClassCase
    value: CamelCase
